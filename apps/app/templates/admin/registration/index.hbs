<div class="item-form">
  <div class="item-form-header row">
    <div class="item-form-title font-xl">
      Registration Request
    </div>
    <div class="item-form-close">
      {{#link-to 'admin.registrations'}} x {{/link-to}}
    </div>
  </div>
  <div class="item-form-main row">
    <form class="form-create ">
      <div class="form-group">
        <label for="name">Name:</label>
        <div class="input"> {{item.name}} </div>
      </div>
      <div class="form-group">
        <label for="name">Application Date:</label>
        <div class="input">{{moment-format item.date 'LL'}}</div>
      </div>
      <div class="form-group section">
        <div class="section-header">Contact Information</div>
      </div>
       <div class="form-group">
         <label for="contact name"> Name:</label>
         <div class="input"> {{item.firstName}} {{item.contact.lastName}} </div>
       </div>
       <div class="form-group">
         <label for="email">e-mail address:</label>
         <div class="input"> {{item.contact.email}} </div>
       </div>
       <div class="form-group">
         <label for="phone">Phone Number:</label>
         <div class="input"> {{item.contact.phone}} </div>
       </div>
       <div class="form-group">
         <label for="url">Url:</label>
         <div class="input"> {{item.url}} </div>
       </div>
     </form>
  </div>
</div>
