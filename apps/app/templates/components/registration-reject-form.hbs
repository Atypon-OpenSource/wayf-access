<form class="form-create ">
  <div class="form-group">
    <label for="name">Name:</label>
    <div class="input"> {{item.name}} </div>
  </div>
  <div class="form-group">
    <label for="name">Application Date:</label>
    <div class="input">{{moment-format item.date 'LL'}}</div>
  </div>
  <div class="form-group section">
    <div class="section-header">Contact Information</div>
  </div>
   <div class="form-group">
     <label for="contact name"> Name:</label>
     <div class="input"> {{item.firstName}} {{item.contact.lastName}} </div>
   </div>
   <div class="form-group">
     <label for="email">e-mail address:</label>
     <div class="input"> {{item.contact.email}} </div>
   </div>
   <div class="form-group">
     <label for="phone">Phone Number:</label>
     <div class="input"> {{item.contact.phone}} </div>
   </div>
   <div class="form-group buttons">
     {{#link-to 'admin.registrations' class='btn btn-color-gray width-mid'}} cancel {{/link-to}}
     <div class="btn btn-color-secondary width-mid" {{action "rejectRegistration" item}}> reject </div>
   </div>
   <div class="form-group center">
     <div class="center {{loading}}">
       <span>rejecting registration for {{item.name}}...</span>
     </div>
 {{#if errorMessage}}
     <div class="error {{loading}}">
       <strong>Oops Something went wrong.</strong> Please try again.
     </div>
 {{/if}}
   </div>
 </form>
