<form class="form-create ">
   <div class="form-group">
     <label ffor="first name">New password</label>
     {{input value=password placeholder='Enter the new password' type='text' class='form-control' required='true'}}
   </div>

   <div class="form-group buttons">
     {{#link-to 'admin.users' class='btn btn-color-gray width-mid'}} cancel {{/link-to}}
     <div class="btn btn-color-secondary width-mid" {{action "reset" id}}> save </div>
   </div>
   <div class="form-group center">
     <div class="center {{loading}}">
       <span>reseting user password...</span>
     </div>
 {{#if errorMessage}}
     <div class="error {{loading}}">
       <strong>Oops Something went wrong.</strong> Please try again.
     </div>
 {{/if}}
   </div>
 </form>
