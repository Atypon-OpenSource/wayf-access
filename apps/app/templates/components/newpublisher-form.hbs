<form class="form-create ">
   <div class="form-group">
     <label>Name</label>
     {{input value=name placeholder='Enter the name of the service probider' type='text' class='form-control' required='true'}}
   </div>
   <div class="form-group">
     <label for="first name">First Name</label>
     {{input value=firstName placeholder='Enter the first name of the contact person' type='text' class='form-control'}}
   </div>
   <div class="form-group">
     <label for="last name">Last Name</label>
     {{input value=lastName placeholder='Enter the last name of the contact person' class='form-control' type='text'}}
   </div>
   <div class="form-group">
     <label for="email">e-mail address</label>
     {{input value=email placeholder='Enter the e-mail address of the contect person' class='form-control' type='email'}}
   </div>
   <div class="form-group">
     <label for="phone">Phone Number</label>
     {{input value=phone placeholder='Enter the phone number of the contect person' class='form-control' type='text'}}
   </div>
   <div class="form-group">
     <label for="url">Url</label>
     {{input value=url placeholder='Enter the Url' class='form-control' type='text'}}
   </div>
   <div class="form-group buttons">
     {{#link-to 'admin.publishers' class='btn btn-color-gray width-mid'}} cancel {{/link-to}}
     <div class="btn btn-color-secondary width-mid" {{action "createPublisher" item}}> save </div>
   </div>
   <div class="form-group center">
     <div class="center {{loading}}">
       <span>saving...</span>
     </div>
 {{#if errorMessage}}
     <div class="error {{loading}}">
       <strong>Oops Something went wrong.</strong> Please try again.
     </div>
 {{/if}}
   </div>
 </form>
