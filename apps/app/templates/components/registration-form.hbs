<form class="form" {{action 'register' on='submit'}}>
  <div class="form-group">
    <!-- we need a descriptive title, as we can't control how the user got here -->
    <div class="form-header"> WAYF Cloud Registration</div>
    <span class="help">for Service Provider and Publisher plaftorm</span>
  </div>
   <div class="form-group">
     <label>Organization Name</label>
     {{input value=name placeholder='Enter the name of your organization' type='text' class='form-control' required='true'}}
   </div>
   <div class="form-group section">
     <div class="section-header">Contact Person</div>
     <span class="help">This information will be used to verify your registration request</span>
   </div>
   <div class="form-group">
     <label ffor="first name">First Name</label>
     {{input value=firstName placeholder='Enter your first name' type='text' class='form-control' required='true'}}
   </div>
   <div class="form-group">
     <label for="last name">Last Name</label>
     {{input value=lastName placeholder='Enter your last name' class='form-control' type='text' required='true'}}
   </div>
   <div class="form-group">
     <label for="email">e-mail address</label>
     {{input value=email placeholder='Enter your contact e-mail address' class='form-control' type='email' required='true'}}
   </div>
   <div class="form-group">
     <label for="phone">Phone Number</label>
     {{input value=phone placeholder='Enter a phone number' class='form-control' type='text' required='true'}}
   </div>
   <div class="form-group">
     <button type="submit" class="btn btn-color-secondary width-full">Register</button>
   </div>
   <div class="form-group">
     <div class="center {{loading}}">
       <span>sending registration...</span>
     </div>
 {{#if errorMessage}}
     <div class="error {{loading}}">
       <strong>Oops Something went wrong.</strong> Please try again.
     </div>
 {{/if}}
   </div>
 </form>
