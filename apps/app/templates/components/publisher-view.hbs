<form class="form-create ">
  <div class="form-group section">
    <div class="section-header">Plartform Integration </div>
  </div>
  <div class="form-group">
    <label for="first name">Widget URL:</label>
    <div class="input"> {{item.api.widgetUrl}} </div>
  </div>
  <div class="form-group">
    <label for="first name">API KEY:</label>
    <div class="input"> {{item.api.token}} </div>
  </div>
  <div class="form-group section">
    <div class="section-header">Contact Information</div>
  </div>
   <div class="form-group">
     <label for="contact name"> Name:</label>
     <div class="input"> {{item.contact.firstName}} {{item.contact.lastName}} </div>
   </div>
   <div class="form-group">
     <label for="email">e-mail address:</label>
     <div class="input"> {{item.contact.email}} </div>
   </div>
   <div class="form-group">
     <label for="phone">Phone Number:</label>
     <div class="input"> {{item.contact.phone}} </div>
   </div>
   <div class="form-group section">
     <div class="section-header">Other </div>
   </div>
   <div class="form-group">
     <label for="phone">Registation Date:</label>
     <div class="input">{{moment-format item.date 'LL'}}</div>
   </div>
   <div class="form-group buttons">
     {{#link-to 'admin.publishers' class='btn btn-color-gray width-mid'}} cancel {{/link-to}}
     <div class="btn btn-color-secondary width-mid" {{action "createPublisher" item}}> delete </div>
   </div>
   <div class="form-group center">
     <div class="center {{loading}}">
       <span>deleting {{item.name}}...</span>
     </div>
 {{#if errorMessage}}
     <div class="error {{loading}}">
       <strong>Oops Something went wrong.</strong> Please try again.
     </div>
 {{/if}}
   </div>
 </form>
